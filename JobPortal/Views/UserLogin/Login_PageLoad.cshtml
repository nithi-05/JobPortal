@model JobPortal.Models.LoginCls
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<body>
    <h2>Login</h2>
    <hr />
    <div>
        @using (Html.BeginForm("Login_Click", "UserLogin", FormMethod.Get))
        {
            <div>
                <label>Username:</label>
            </div>
            <div>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Enter Username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div>
                <label>Password:</label>
            </div>
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div>
                <br />
                <input type="submit" value="Login" class="btn btn-primary" />
                <label class="text-danger"> @Html.DisplayFor(m => m.Msg) </label>
            </div>
            <div>
                <br />
                <label>New to Job Portal? </label>
                @Html.ActionLink("Sign Up Now.", "User_Load", "UserReg")
            </div>
        }
    </div>

</body>
